    <!-- Blog Section -->
    <section id="blog-index-2065">
        <div class="cs-container">
            <!-- Blog Header -->
            <div class="blog-header">
                <h1>Blog</h1>
            </div>

            <!-- Category Filter -->
            <div class="category-filter">
                <h2 class="category-title">Categories:</h2>
                <button class="category-toggle" aria-label="Toggle categories">
                    <span class="category-toggle-text">
                        <%= selectedCategory ? selectedCategory : 'All' %>
                    </span>
                    <img class="cs-toggle-icon" src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Icons%2Fdown.svg" alt="toggle icon" width="15" height="15" decoding="async" aria-hidden="true">
                </button>
                <ul class="category-list" aria-expanded="false">
                    <li><a href="/blog" class="<%= !selectedCategory ? 'active' : '' %>">All</a></li>
                    <% categories.forEach(category => { %>
                        <li><a href="/blog?category=<%= encodeURIComponent(category) %>" class="<%= selectedCategory === category ? 'active' : '' %>"><%= category %></a></li>
                    <% }); %>
                </ul>
            </div>

            <!-- Blog Posts Grid -->
            <div class="blog-grid">
                <% if (posts && posts.length > 0) { %>
                    <% posts.forEach(post => { %>
                        <article class="blog-card">
                            <% if (post.featuredImage) { %>
                                <div class="blog-image">
                                    <picture>
                                        <source media="(max-width: 600px)" srcset="<%= post.featuredImage.mobile %>">
                                        <source media="(min-width: 601px)" srcset="<%= post.featuredImage.desktop %>">
                                        <img 
                                            src="<%= post.featuredImage.default %>"
                                            alt="<%= post.title %>"
                                            width="400"
                                            height="225"
                                            decoding="async">
                                    </picture>
                                </div>
                            <% } %>
                            <div class="blog-content">
                                <h3 class="blog-title">
                                    <a href="/blog/<%= post.slug %>" aria-label="Read <%= post.title %>">
                                        <%= post.title %>
                                    </a>
                                </h3>
                                <div class="blog-meta">
                                    <time datetime="<%= post.publishedDate %>">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-newspaper" viewBox="0 0 16 16" aria-hidden="true">
                                            <path d="M0 2.5A1.5 1.5 0 0 1 1.5 1h11A1.5 1.5 0 0 1 14 2.5v10.528c0 .3-.05.654-.238.972h.738a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 1 1 0v9a1.5 1.5 0 0 1-1.5 1.5H1.497A1.497 1.497 0 0 1 0 13.5zM12 14c.37 0 .654-.211.853-.441.092-.106.147-.279.147-.531V2.5a.5.5 0 0 0-.5-.5h-11a.5.5 0 0 0-.5.5v11c0 .278.223.5.497.5z"/>
                                            <path d="M2 3h10v2H2zm0 3h4v3H2zm0 4h4v1H2zm0 2h4v1H2zm5-6h2v1H7zm3 0h2v1h-2zM7 8h2v1H7zm3 0h2v1h-2zm-3 2h2v1H7zm3 0h2v1h-2zm-3 2h2v1H7zm3 0h2v1h-2z"/>
                                        </svg>
                                        <%= new Date(post.publishedDate).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %>
                                    </time>
                                </div>
                                <p class="blog-excerpt">
                                    <% 
                                        let excerpt = 'No preview available.';
                                        try {
                                            const firstTextBlock = post.content.find(block => block.children && block.children.length > 0);
                                            if (firstTextBlock && firstTextBlock.children[0].text) {
                                                excerpt = firstTextBlock.children[0].text.substring(0, 150) + '...';
                                            }
                                        } catch (e) {
                                            // Fallback in case of error
                                        }
                                    %>
                                    <%= excerpt %>
                                </p>
                                <a href="/blog/<%= post.slug %>" class="cs-button-solid">Read More</a>
                            </div>
                        </article>
                    <% }); %>
                <% } else { %>
                    <p class="no-posts">No blog posts available at this time.</p>
                <% } %>
            </div>
        </div>
