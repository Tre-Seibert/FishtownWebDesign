<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta property="og:image" content="https://fishtownwebdesign.com/public/content/about/logometa.png">
    <meta property="og:image:width" content="1200">
    <meta property="og:image:height" content="630">
    <meta name="description" content="Explore the latest blog posts from Fishtown Web Design.">
    <meta property="og:title" content="Blog | Fishtown Web Design">
    <meta property="og:description" content="Explore the latest blog posts from Fishtown Web Design.">
    <link rel="canonical" href="https://fishtownwebdesign.com/blog" />

    <title>Blog | Fishtown Web Design</title>

    <!-- CSS Imports -->
    <link rel="stylesheet" href="/node_modules/bootstrap/dist/css/bootstrap.min.css" defer>
    <link rel="stylesheet" href="/public/css/core.css">
    <link rel="stylesheet" href="/public/blog/index.css">

    <!-- Favicons -->
    <link rel="icon" type="image/png" sizes="16x16" href="/public/content/home/favicon_io/favicon-16x16.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/public/content/home/favicon_io/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="192x192" href="/public/content/home/favicon_io/android_chrome_192x192.png">
    <link rel="icon" type="image/png" sizes="512x512" href="/public/content/home/favicon_io/android_chrome_512x512.png">
    <link rel="apple-touch-icon" href="/public/content/home/favicon_io/apple-touch-icon.png">
    <link rel="icon" href="/public/content/home/favicon_io/favicon.ico">

    <!-- Google Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Playfair+Display:wght@400;700&display=swap">
</head>
<body>
    <!-- Top Banner -->
    <div class="top-banner">
        Expert Internet Marketing & SEO Services in Fishtown
    </div>

    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light navbar-custom">
        <div class="container-fluid">
            <a class="navbar-brand" href="https://fishtownwebdesign.com/">
                <picture>
                    <source media="(max-width: 600px)" srcset="https://fishtownwebdesign.com/public/content/home/logo-m.webp">
                    <source media="(min-width: 601px)" srcset="https://fishtownwebdesign.com/public/content/home/logo.webp">
                    <img src="/public/content/home/logo.png" alt="Fishtown Web Design Logo" loading="lazy" decoding="async" id="logo">
                </picture>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item"><a class="nav-link" href="https://fishtownwebdesign.com/">Home</a></li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button" data-bs-toggle="dropdown" aria-expanded="false">About</a>
                        <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                            <li><a class="dropdown-item" href="https://fishtownwebdesign.com/about">About Us</a></li>
                            <li><a class="dropdown-item" href="https://fishtownwebdesign.com/faq">FAQ</a></li>
                        </ul>
                    </li>
                    <li class="nav-item"><a class="nav-link" href="https://fishtownwebdesign.com/pricing">Pricing</a></li>
                    <li class="nav-item"><a class="nav-link" href="https://fishtownwebdesign.com/contact">Contact</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Blog Header -->
    <header class="blog-header">
        <div class="container">
            <h1 class="blog-title">Fishtown Web Design Blog</h1>
            <p class="blog-subtitle">Insights, tips, and updates on web design, SEO, and digital marketing.</p>
        </div>
    </header>

    <!-- Main Content -->
    <main class="container blog-content">
        <div class="row">
            <!-- Blog Posts -->
            <section class="col-lg-8">
                <div class="blog-posts-list">
                    <% if (posts && posts.length > 0) { %>
                        <% posts.forEach(post => { %>
                            <article class="blog-post-item">
                                <h2 class="blog-post-title"><a href="/blog/<%= post.slug %>"><%= post.title %></a></h2>
                                <p class="blog-meta">
                                    <span>Posted on: <%= new Date(post.publishedDate).toLocaleDateString() %></span> | 
                                    <span>Categories: <%= post.categories.join(', ') %></span>
                                </p>
                                <p class="blog-excerpt">
                                    <% 
                                        const firstTextBlock = post.content.find(block => block.children && block.children.length > 0);
                                        const excerpt = firstTextBlock ? firstTextBlock.children[0].text.substring(0, 150) + '...' : 'No preview available.';
                                    %>
                                    <%= excerpt %>
                                </p>
                                <a href="/blog/<%= post.slug %>" class="btn btn-primary">Read More</a>
                            </article>
                        <% }) %>
                    <% } else { %>
                        <p class="no-posts">No blog posts available at this time.</p>
                    <% } %>
                </div>
            </section>

            <!-- Sidebar (Category Filter) -->
            <aside class="col-lg-4 blog-sidebar">
                <div class="category-filter">
                    <h3>Categories</h3>
                    <ul class="category-list">
                        <li><a href="/blog" class="<%= !selectedCategory ? 'active' : '' %>">All</a></li>
                        <% categories.forEach(category => { %>
                            <li><a href="/blog?category=<%= encodeURIComponent(category) %>" class="<%= selectedCategory === category ? 'active' : '' %>"><%= category %></a></li>
                        <% }); %>
                    </ul>
                </div>
            </aside>
        </div>
    </main>

    <!-- Footer -->
    <footer class="footer text-center py-4">
        <p>Â© <span id="current-year"></span> Fishtown Web Design. All rights reserved.</p>
        <picture>
            <source media="(max-width: 600px)" srcset="https://fishtownwebdesign.com/public/content/home/fish-m.webp">
            <source media="(min-width: 601px)" srcset="https://fishtownwebdesign.com/public/content/home/fish.webp">
            <img loading="lazy" src="/public/content/home/fish.png" id="fish" alt="Fishtown Logo">
        </picture>
        <p><a href="https://www.facebook.com/profile.php?id=61570913623739">Facebook</a> | <a href="https://instagram.com/fishtownwebdesign">Instagram</a></p>
        <p><a id="tos" href="https://fishtownwebdesign.com/terms-of-service">Terms of Service</a> | <a id="pp" href="https://fishtownwebdesign.com/privacy-policy">Privacy Policy</a></p>
    </footer>

    <script src="/node_modules/bootstrap/dist/js/bootstrap.bundle.min.js" defer></script>
    <script defer>
        document.getElementById("current-year").textContent = new Date().getFullYear();
    </script>
</body>
</html>